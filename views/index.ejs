            </div>
            <!--  SEARCH BAR  -->
            <div class="column-right">
                <div class="search-wrapper">
                    <div class="centered-text-input"><h3 for = "search">Search Cards:</h3></div>
                    <input type="search" id="search" autocomplete="off" data-search>
                </div>
    
                <div class="user-cards" data-user-cards-container>
                    <template data-user-template>
                        <div class="card hide" id = "card-block">
                            <div style="display: flex;">
                                <img src="" loading="lazy" card-img>
                                <span>
                                    <label card-name></label><br>
                                    <label card-type></label><br>
                                    <label card-attributes></label>
                                </span>
                            </div>
                        </div>
                    </template>
                </div>
                
                </div>
            </div>
        </div>
   </div>
   <script src="../js/index.js"></script>
</body>
</html>